{
	"name": "auth",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build",
		"build:production": "npx convex deploy --cmd='vite build'",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"vercel:link": "cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie\"",
		"vercel:pull": "cross-env-shell \"vercel env pull --token $VERCEL_TOKEN --scope etesie\"",
		"init:repo": "pnpm config set auto-install-peers true && pnpm install && cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie && vercel env pull --token $VERCEL_TOKEN --scope etesie\" && pnpm dev",
		"pull:convex": "rm -rf ./src/convex && cp -r ../convex ./src/convex"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.513.0",
		"@skeletonlabs/skeleton": "3.1.3",
		"@skeletonlabs/skeleton-svelte": "1.2.3",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.8",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^22.15.29",
		"@zag-js/file-upload": "^1.14.0",
		"bits-ui": "^2.4.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.1",
		"globals": "^16.2.0",
		"mode-watcher": "^1.0.7",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"svelte": "^5.33.14",
		"svelte-check": "^4.2.1",
		"svelte-sonner": "^1.0.4",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.8",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^6.3.5",
		"vitest": "^3.2.1"
	},
	"dependencies": {
		"@auth/core": "^0.39.1",
		"@convex-dev/auth": "^0.0.87",
		"@mmailaender/convex-auth-svelte": "0.0.2",
		"@tailwindcss/vite": "^4.1.8",
		"@vercel/blob": "^1.1.1",
		"arktype": "^2.1.20",
		"convex": "^1.24.8",
		"convex-ents": "^0.13.0",
		"convex-helpers": "^0.1.90",
		"convex-svelte": "file:node_modules_local/convex-svelte-0.0.11.tgz",
		"resend": "^4.5.2",
		"sharp": "^0.34.2"
	}
}
