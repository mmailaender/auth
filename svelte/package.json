{
	"name": "auth",
	"version": "0.0.12",
	"type": "module",
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build",
		"build:production": "npx convex deploy --cmd='vite build'",
		"preview": "vite preview",
		"postinstall": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"vercel:link": "cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie\"",
		"vercel:pull": "cross-env-shell \"vercel env pull --token $VERCEL_TOKEN --scope etesie\"",
		"init:repo": "pnpm config set auto-install-peers true && pnpm install && cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie && vercel env pull --token $VERCEL_TOKEN --scope etesie\" && pnpm dev",
		"pull:convex": "rm -rf ./src/convex && cp -r ../convex ./src/convex",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"ci:release": "jsrepo publish && changeset tag"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/compat": "^1.4.0",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@skeletonlabs/skeleton": "3.2.2",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-vercel": "^5.10.2",
		"@sveltejs/kit": "^2.43.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.13",
		"@tailwindcss/typography": "^0.5.18",
		"@types/node": "^24.5.2",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"cross-env": "^10.0.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"jsrepo": "^2.5.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@ark-ui/svelte": "^5.10.0",
		"@convex-dev/better-auth": "0.8.6",
		"@convex-dev/resend": "0.1.13",
		"@icons-pack/svelte-simple-icons": "^6.4.0",
		"@mmailaender/convex-better-auth-svelte": "0.1.1",
		"@tailwindcss/vite": "^4.1.13",
		"@zxcvbn-ts/core": "^3.0.4",
		"@zxcvbn-ts/language-common": "^3.0.4",
		"@zxcvbn-ts/language-en": "^3.0.2",
		"better-auth": "1.3.16",
		"convex": "^1.27.3",
		"convex-helpers": "^0.1.104",
		"convex-svelte": "^0.0.11",
		"path-to-regexp": "^8.3.0",
		"runed": "^0.34.0",
		"svelte-easy-crop": "^5.0.0",
		"svelte-toolbelt": "^0.10.5"
	},
	"packageManager": "pnpm@10.15.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	}
}
