{
	"name": "auth",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build",
		"build:production": "npx convex deploy --cmd='vite build'",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"vercel:link": "cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie\"",
		"vercel:pull": "cross-env-shell \"vercel env pull --token $VERCEL_TOKEN --scope etesie\"",
		"init:repo": "pnpm config set auto-install-peers true && pnpm install && cross-env-shell \"vercel link --yes --token $VERCEL_TOKEN --scope etesie && vercel env pull --token $VERCEL_TOKEN --scope etesie\" && pnpm dev",
		"pull:convex": "rm -rf ./src/convex && cp -r ../convex ./src/convex"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.539.0",
		"@skeletonlabs/skeleton": "3.1.7",
		"@skeletonlabs/skeleton-svelte": "1.3.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-vercel": "^5.8.1",
		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^24.1.0",
		"@zag-js/file-upload": "^1.21.1",
		"bits-ui": "^2.9.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.0",
		"cross-env": "^10.0.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.37.3",
		"svelte-check": "^4.3.1",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^2.1.0",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.38.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.0.6",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@ark-ui/svelte": "^5.3.3",
		"@auth/core": "^0.40.0",
		"@convex-dev/better-auth": "^0.7.13",
		"@convex-dev/resend": "0.1.7",
		"@icons-pack/svelte-simple-icons": "^6.4.0",
		"@mmailaender/convex-better-auth-svelte": "^0.0.4",
		"@tailwindcss/vite": "^4.1.11",
		"@vercel/blob": "^1.1.1",
		"arktype": "^2.1.20",
		"better-auth": "1.3.4",
		"convex": "^1.25.4",
		"convex-ents": "^0.15.0",
		"convex-helpers": "^0.1.100",
		"convex-svelte": "^0.0.11",
		"path-to-regexp": "^8.2.0"
	}
}
