@role(server)
function createAccessToken(user: User, refreshToken: Token): Token {
  let ACCESS_TOKEN_LIFETIME_SECONDS = 600 // 10 minutes
  
  Token.create({
    document: user,
    data: {
      type: "access",
      refresh: refreshToken
    },
    ttl: Time.now().add(ACCESS_TOKEN_LIFETIME_SECONDS, "seconds")
  })
}