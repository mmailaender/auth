collection User {
    firstName: String
    lastName: String
    email: String
    avatar: String?
    accounts: Array<Ref<Account>>

    check isValidRegistration ((user) => {
      if (user.accounts!.any((account) => account!.passkey != null)) {
          Registration.all().any((registration) => registration.email == user.email)
      } else {
          true
      }
    })

    unique [.email]
    unique [mva(.accounts)]
}